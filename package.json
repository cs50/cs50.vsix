{
    "name": "cs50",
    "displayName": "CS50",
    "description": "A CS50 Visual Studio Code extension",
    "version": "0.0.1",
    "publisher": "CS50",
    "repository": "https://github.com/cs50/cs50.vsix",
    "engines": {
        "vscode": "^1.63.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "cs50-menu",
                    "title": "CS50 Menu",
                    "icon": "resources/cs50.svg"
                }
            ]
        },
        "views": {
            "cs50-menu": [
                {
                    "id": "cs50-menu",
                    "name": "CS50 Menu"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "cs50-menu",
                "contents": "[Launch GUI](command:cs50.launchGUI)\n[Update Codespace](command:cs50.updateCodespace)\n[Rebuild Codespace](command:github.codespaces.rebuildEnvironment)\n"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+`",
                "command": "workbench.action.terminal.focus"
            },
            {
                "key": "ctrl+`",
                "command": "workbench.action.focusActiveEditorGroup",
                "when": "terminalFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^17.0.8",
        "@types/tcp-port-used": "^1.0.0",
        "@types/vscode": "^1.63.1",
        "@types/ws": "^8.2.2",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.6.0",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "tcp-port-used": "^1.0.2",
        "ws": "^8.4.0"
    }
}
